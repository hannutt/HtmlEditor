<Window x:Class="HtmlEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HtmlEditor" xmlns:controls="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Html-Editor" Height="470" Width="800">


    <Window.Background>
        <ImageBrush ImageSource="/images/bgMedium.jpg"></ImageBrush>
    </Window.Background>
    <Grid KeyDown="Grid_KeyDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="191*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="23,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Height="200" Background="#FFB9B9B9" AllowDrop="True" Drop="txtBox_Drop" AcceptsReturn="True" KeyDown="txtBox_KeyDown" KeyUp="txtBox_KeyUp" Grid.ColumnSpan="2"/>
        <Image x:Name="titleImage" HorizontalAlignment="Left" Height="100" Margin="323,34,0,0" VerticalAlignment="Top" Width="100" Source="/images/html64px.png" Grid.Column="1"/>
        <Label x:Name="titleLbl" Content="EDITOR" HorizontalAlignment="Left" Margin="335,149,0,0" VerticalAlignment="Top" Width="88" FontFamily="Arial Black" FontSize="14" Grid.Column="1"/>
        <ComboBox x:Name="Cbox" HorizontalAlignment="Left" Margin="23,23,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2">
            <ComboBoxItem x:Name="fDialog" Content="Open File" Selected="fDialog_Selected"/>
            <ComboBoxItem x:Name="saveDialog" Content="Save File"/>
            <ComboBoxItem x:Name="italicFont" Content="Italic font" Selected="fontItalic_Selected"></ComboBoxItem>
            <ComboBoxItem x:Name="boldFont" Content="Bold Font"></ComboBoxItem>
            <ComboBoxItem x:Name="saveValues" Content="Save textbox size" Selected="saveValues_Selected"></ComboBoxItem>
            <ComboBoxItem x:Name="savePreviewValues" Content="Save preview win. size" Selected="savePreviewValues_Selected"></ComboBoxItem>
            <ComboBoxItem x:Name="loadValues" Content="Load saved layout" Selected="loadValues_Selected"></ComboBoxItem>
            <ComboBoxItem x:Name="CreateForm" Content="Create HTML-form" Selected="callFetch" Tag="1"></ComboBoxItem>
            <ComboBoxItem x:Name="CreateTable" Content="Create HTML table" Selected="callFetch" Tag="2"></ComboBoxItem>
        </ComboBox>
        <WebBrowser x:Name="wbrow" HorizontalAlignment="Left" Height="131" Margin="465,257,0,0" VerticalAlignment="Top" Width="235" SnapsToDevicePixels="True" Grid.Column="1"/>
        <Button x:Name="tagBtn1" Content="&lt;p&gt;&lt;/p&gt;" HorizontalAlignment="Left" Margin="23,69,0,0" VerticalAlignment="Top" MouseMove="tagBtn1_MouseMove" Visibility="Hidden" Grid.ColumnSpan="2" />
        <Button x:Name="tagBtn2" Content="&lt;h1&gt;&lt;/h1&gt;" HorizontalAlignment="Left" Margin="67,69,0,0" VerticalAlignment="Top" MouseMove="tagBtn2_MouseMove" Visibility="Hidden" Grid.Column="1"/>
        <TextBox x:Name="writeTag" HorizontalAlignment="Left" Margin="23,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostFocus="writeTag_LostFocus" Text="WRITE TAG HERE" Grid.ColumnSpan="2" />
        <Button x:Name="writedTag" Content="" HorizontalAlignment="Left" Margin="23,119,0,0" VerticalAlignment="Top" MouseMove="writedTag_MouseMove"/>
        <Button x:Name="saveBtn" Content="Save template" HorizontalAlignment="Left" Margin="323,368,0,0" VerticalAlignment="Top" Click="saveBtn_Click" Grid.Column="1"/>
        <Button x:Name="viewBtn" Content="Preview current" HorizontalAlignment="Left" Margin="465,194,0,0" VerticalAlignment="Top" Click="viewBtn_Click" Grid.Column="1"/>
        <RadioButton x:Name="htmlRadio" Content="HTML Boilerbate" HorizontalAlignment="Left" Margin="167,30,0,0" VerticalAlignment="Top" Checked="htmlRadio_Checked" Grid.Column="1"/>
        <RadioButton x:Name="cssRadio" Content="CSS Boilerpate" HorizontalAlignment="Left" Margin="167,74,0,0" VerticalAlignment="Top" Click="cssRadio_Click" Grid.Column="1"/>
        <CheckBox x:Name="autoCompCB" Content="Use AutoComplete" HorizontalAlignment="Left" Margin="167,101,0,0" VerticalAlignment="Top" Checked="autoCompCB_Checked" Unchecked="autoCompCB_Unchecked" Grid.Column="1"/>
        <controls:AutoCompleteBox x:Name="acbox"  HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="7,153,0,0" Width="100" Visibility="Hidden" Grid.Column="1"></controls:AutoCompleteBox>
        <Button x:Name="boxIncreaseBtn" Background="#5bf083" Content="Size +" HorizontalAlignment="Left" Margin="323,188,0,0" VerticalAlignment="Top" Click="boxIncrease_Click" RenderTransformOrigin="-0.382,-0.048" Grid.Column="1"/>
        <Button x:Name="boxDecreaseBtn" Background="#e81729" Content="Size -" HorizontalAlignment="Left" Margin="323,231,0,0" VerticalAlignment="Top" Click="boxDecrease_Click" Grid.Column="1"/>
        <xctk:ColorPicker x:Name="ClrPcker" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="20" Margin="23,159,0,0" SelectedColorChanged="ClrPcker_SelectedColorChanged" Grid.ColumnSpan="2"></xctk:ColorPicker>
        <Slider x:Name="previewSlider" HorizontalAlignment="Left" Margin="597,229,0,0" VerticalAlignment="Top" Width="120" Minimum="200" ValueChanged="previewSlider_ValueChanged" Maximum="400" Grid.Column="1"/>
        <!-- labelin bindaus slider valuen lanssa -->
        <Label x:Name="sliderVal" Content="{Binding ElementName=previewSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="628,201,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <CheckBox x:Name="openAnother" Content="Open another" HorizontalAlignment="Left" Margin="465,229,0,0" VerticalAlignment="Top" Checked="openAnother_Checked" Grid.Column="1" />
        <Button x:Name="resetBtn" Background="#5bf083" Content="Reset sizes" HorizontalAlignment="Left" Margin="320,268,0,0" VerticalAlignment="Top" Click="resetBtn_Click" Grid.Column="1"/>
        <RadioButton x:Name="htmlBsJquery" Content="HTML - BS5- jQuery" HorizontalAlignment="Left" Margin="167,54,0,0" VerticalAlignment="Top" Checked="htmlBsJquery_Checked" Grid.Column="1"/>
        <DataGrid x:Name="debugdg"  Margin="491,3,13,330" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.264"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <CheckBox x:Name="createAttributes" Grid.Column="1" Content="Create id &amp; class att." HorizontalAlignment="Left" Margin="167,127,0,0" VerticalAlignment="Top" Checked="createAttributes_Checked" Unchecked="createAttributes_Unchecked"/>
        <Label x:Name="currentSize" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="202,153,0,0" VerticalAlignment="Top"/>
    </Grid>


</Window>
