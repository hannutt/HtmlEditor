<Window x:Class="HtmlEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HtmlEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="23,188,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="265" Height="174" TextChanged="txtBox_TextChanged" Background="#FFB9B9B9" Initialized="txtBox_Initialized" AllowDrop="True" Drop="txtBox_Drop"/>
        <Image x:Name="titleImage" HorizontalAlignment="Left" Height="100" Margin="322,39,0,0" VerticalAlignment="Top" Width="100" Source="/images/html64px.png"/>
        <Label x:Name="titleLbl" Content="EDITOR" HorizontalAlignment="Left" Margin="328,153,0,0" VerticalAlignment="Top" Width="88"/>
        <ComboBox x:Name="Cbox" HorizontalAlignment="Left" Margin="23,23,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem x:Name="pTag" Content="p" Selected="pTag_Selected"/>
            <ComboBoxItem x:Name="hTag" Content="H1"/>
        </ComboBox>
        <WebBrowser x:Name="wbrow" HorizontalAlignment="Left" Height="131" Margin="343,217,0,0" VerticalAlignment="Top" Width="235" SnapsToDevicePixels="True"/>
        <Button x:Name="ptagBtn" Content="&lt;p&gt;&lt;/p&gt;" HorizontalAlignment="Left" Margin="23,69,0,0" VerticalAlignment="Top" MouseMove="ptagBtn_MouseMove" />



    </Grid>
</Window>
